<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".main.fragment.GoOutFragment">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/logoImageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="5dp"
                android:background="@drawable/view_oval_gray"
                android:src="@drawable/logo_main"

                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그아웃 하시겠습니까?"
                style="@style/default_font"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/logoImageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/view_gray_round"
                android:orientation="vertical"
                android:layout_marginTop="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"

                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/titleTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="※ 탈퇴시 유의사항"
                    style="@style/default_font"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/descriptionOneTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/goOutTermOne"
                    style="@style/default_font"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"
                    android:lineSpacingExtra="8sp" />

                <TextView
                    android:id="@+id/descriptionTwoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/goOutTermTwo"
                    style="@style/default_font"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"
                    android:lineSpacingExtra="8sp" />

                <TextView
                    android:id="@+id/descriptionThreeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/goOutTermThree"
                    style="@style/default_font"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"
                    android:lineSpacingExtra="8sp" />

                <TextView
                    android:id="@+id/descriptionFourTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/goOutTermFour"
                    style="@style/default_font"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"
                    android:lineSpacingExtra="8sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttonPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="32dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/cancelButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="취소"
                    style="@style/default_font"
                    android:textSize="20sp"
                    android:textColor="#626272"

                    android:layout_marginEnd="5dp"
                    android:outlineProvider="none"
                    android:background="@drawable/btn_sign_up_skip"
                    android:layout_weight="2" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/goOutButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="탈퇴하기"
                    style="@style/default_font"
                    android:textSize="20sp"
                    android:textColor="@color/white"

                    android:outlineProvider="none"
                    android:background="@drawable/btn_sign_up_next_goout"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>