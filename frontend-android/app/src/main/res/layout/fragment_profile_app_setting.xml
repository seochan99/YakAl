<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.viewpharm.yakal.main.viewmodel.ProfileAppSettingViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".main.fragment.ProfileAppSettingFragment">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/modeSettingTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="모드 설정"
                    style="@style/default_font"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <RadioGroup
                    android:id="@+id/modeRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/modeSettingTextView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <!--                android:onCheckedChanged="@{(_, checkedId) -> viewModel.setOnCheckedChange(checkedId)}"-->


                    <RadioButton
                        android:id="@+id/normalModeRadioButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/selector_radio_button"
                        android:checked="@{!viewModel.isDetail}"
                        android:button="@null"
                        android:lineSpacingExtra="2sp"
                        android:paddingStart="20dp"
                        android:paddingTop="24dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="24dp"
                        android:text="일반 모드\n\n약알의 일반적인 모드입니다" />

                    <RadioButton
                        android:id="@+id/lightModeRadioButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:button="@null"
                        android:checked="@{viewModel.isDetail}"
                        android:paddingTop="24dp"
                        android:paddingBottom="24dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="라이트 모드\n\n시니어를 위한 쉬운 모드입니다.\n다제약물 정보가 포함되어 있습니다."
                        android:background="@drawable/selector_radio_button"
                        android:lineSpacingExtra="2sp"
                        android:layout_marginTop="16dp" />
                </RadioGroup>

                <TextView
                    android:id="@+id/timeSettingTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="시간 설정"
                    style="@style/default_font"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintTop_toBottomOf="@id/modeRadioGroup"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/overlapContentTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="나의 루틴에 맞추어 시간을 조정할 수 있습니다."
                    android:textSize="14sp"
                    android:textColor="#626272"
                    style="@style/default_font"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintTop_toBottomOf="@id/timeSettingTextView"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.constraintlayout.helper.widget.Layer
                    android:id="@+id/mooningLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_white_ripple"
                    android:onClick="@{() -> viewModel.onClickMooningButton()}"
                    app:constraint_referenced_ids="mooningImageView, mooningTextView,
                    mooningTimeTextView, mooningTimeSettingButton"
                    tools:ignore="MissingConstraints" />

                <ImageView
                    android:id="@+id/mooningImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:paddingStart="22dp"
                    android:paddingTop="17dp"
                    android:paddingBottom="17dp"

                    android:src="@drawable/ic_custom_mooning"

                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/overlapContentTextView"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/mooningTextView"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="아침"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    style="@style/default_font"
                    app:layout_constraintBottom_toBottomOf="@id/mooningImageView"
                    app:layout_constraintStart_toEndOf="@id/mooningImageView"
                    app:layout_constraintTop_toTopOf="@id/mooningImageView" />

                <TextView
                    android:id="@+id/mooningTimeTextView"
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:text="@{viewModel.mooningTimeText}"
                    android:textSize="16sp"
                    android:textColor="#FF90909F"
                    style="@style/default_font"
                    app:layout_constraintBottom_toBottomOf="@id/mooningImageView"
                    app:layout_constraintStart_toEndOf="@+id/mooningTextView"
                    app:layout_constraintTop_toTopOf="@id/mooningImageView" />

                <ImageButton
                    android:id="@+id/mooningTimeSettingButton"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/view_oval_next"
                    android:src="@drawable/ic_custom_next_big"

                    android:paddingEnd="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/mooningImageView"
                    app:layout_constraintTop_toTopOf="@+id/mooningImageView" />

                <androidx.constraintlayout.helper.widget.Layer
                    android:id="@+id/afternoonLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_white_ripple"
                    android:onClick="@{() -> viewModel.onClickAfternoonButton()}"
                    app:constraint_referenced_ids="afternoonImageView, afternoonTextView,
                    afternoonTimeTextView, afternoonTimeSettingButton"
                    tools:ignore="MissingConstraints" />

                <ImageView
                    android:id="@+id/afternoonImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:paddingStart="22dp"
                    android:paddingTop="17dp"
                    android:paddingBottom="17dp"

                    android:src="@drawable/ic_custom_afternoon"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mooningImageView"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/afternoonTextView"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="점심"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    style="@style/default_font"
                    app:layout_constraintBottom_toBottomOf="@id/afternoonImageView"
                    app:layout_constraintStart_toEndOf="@id/afternoonImageView"
                    app:layout_constraintTop_toTopOf="@id/afternoonImageView" />

                <TextView
                    android:id="@+id/afternoonTimeTextView"
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:text="@{viewModel.afternoonTimeText}"
                    android:textSize="16sp"
                    android:textColor="#FF90909F"
                    style="@style/default_font"
                    app:layout_constraintBottom_toBottomOf="@id/afternoonImageView"
                    app:layout_constraintStart_toEndOf="@+id/afternoonTextView"
                    app:layout_constraintTop_toTopOf="@id/afternoonImageView" />

                <ImageButton
                    android:id="@+id/afternoonTimeSettingButton"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/view_oval_next"
                    android:src="@drawable/ic_custom_next_big"

                    android:paddingEnd="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/afternoonImageView"
                    app:layout_constraintTop_toTopOf="@+id/afternoonImageView" />

                <androidx.constraintlayout.helper.widget.Layer
                    android:id="@+id/eveningLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_white_ripple"
                    android:onClick="@{() -> viewModel.onClickEveningButton()}"
                    app:constraint_referenced_ids="eveningImageView, eveningTextView,
                    eveningTimeTextView, eveningTimeSettingButton"
                    tools:ignore="MissingConstraints" />

                <ImageView
                    android:id="@+id/eveningImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:paddingStart="22dp"
                    android:paddingTop="17dp"
                    android:paddingBottom="17dp"

                    android:src="@drawable/ic_custom_evening"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/afternoonImageView"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/eveningTextView"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="저녁"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    style="@style/default_font"
                    app:layout_constraintBottom_toBottomOf="@id/eveningImageView"
                    app:layout_constraintStart_toEndOf="@id/eveningImageView"
                    app:layout_constraintTop_toTopOf="@id/eveningImageView" />

                <TextView
                    android:id="@+id/eveningTimeTextView"
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:text="@{viewModel.eveningTimeText}"
                    android:textSize="16sp"
                    android:textColor="#FF90909F"
                    style="@style/default_font"
                    app:layout_constraintBottom_toBottomOf="@id/eveningImageView"
                    app:layout_constraintStart_toEndOf="@+id/eveningTextView"
                    app:layout_constraintTop_toTopOf="@id/eveningImageView" />

                <ImageButton
                    android:id="@+id/eveningTimeSettingButton"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/view_oval_next"
                    android:src="@drawable/ic_custom_next_big"

                    android:paddingEnd="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/eveningImageView"
                    app:layout_constraintTop_toTopOf="@+id/eveningImageView" />

                <TextView
                    android:id="@+id/accountSettingTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="계정 설정"
                    style="@style/default_font"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintTop_toBottomOf="@id/eveningImageView"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.constraintlayout.helper.widget.Layer
                    android:id="@+id/logoutLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_white_ripple"
                    android:onClick="@{() -> viewModel.onClickLogoutButton()}"
                    app:constraint_referenced_ids="logoutTextView, logoutSettingButton"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/logoutTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:paddingStart="20dp"
                    android:paddingTop="17dp"
                    android:paddingBottom="17dp"

                    android:text="로그아웃"
                    android:textSize="16sp"
                    style="@style/default_font"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/accountSettingTextView" />

                <ImageButton
                    android:id="@+id/logoutSettingButton"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/view_oval_next"
                    android:src="@drawable/ic_custom_next_big"

                    android:paddingEnd="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/logoutTextView"
                    app:layout_constraintTop_toTopOf="@+id/logoutTextView" />

                <androidx.constraintlayout.helper.widget.Layer
                    android:id="@+id/goOutLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_white_ripple"
                    android:onClick="@{() -> viewModel.onClickGoOutButton()}"
                    app:constraint_referenced_ids="goOutTextView, goOutSettingButton"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/goOutTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:paddingStart="20dp"
                    android:paddingTop="17dp"
                    android:paddingBottom="17dp"

                    android:text="회원탈퇴"
                    android:textSize="16sp"
                    style="@style/default_font"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/logoutTextView" />

                <ImageButton
                    android:id="@+id/goOutSettingButton"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/view_oval_next"
                    android:src="@drawable/ic_custom_next_big"

                    android:paddingEnd="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/goOutTextView"
                    app:layout_constraintTop_toTopOf="@+id/goOutTextView" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </FrameLayout>
</layout>