<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/dl_calendar"
    app:layout_behavior="com.google.android.material.bottom-sheet.BottomSheetBehavior">

    <View
        android:id="@+id/topView"
        android:layout_width="60dp"
        android:layout_height="2dp"
        android:background="@drawable/view_round"
        android:backgroundTint="#E9E9EE"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/calendarMonthLayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/topView"
        app:layout_constraintStart_toStartOf="@+id/topView"
        app:layout_constraintTop_toBottomOf="@+id/topView">

        <ImageView
            android:id="@+id/previousButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/btn_home_bell"
            android:src="@drawable/ic_custom_previous" />

        <TextView
            android:id="@+id/monthTextView"
            style="@style/default_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginEnd="23dp"
            android:text="2023년 12월"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/nextButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/btn_home_bell"
            android:src="@drawable/ic_custom_next" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/calendarDayOfWeekLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/calendarMonthLayout"
        app:layout_constraintStart_toStartOf="@+id/calendarMonthLayout"
        app:layout_constraintTop_toBottomOf="@+id/calendarMonthLayout">

        <TextView
            style="@style/calendar_day_of_week"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="일"
            android:textColor="@color/risk_red" />

        <TextView
            style="@style/calendar_day_of_week"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="월"
            android:textColor="@color/black" />

        <TextView
            style="@style/calendar_day_of_week"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="화"
            android:textColor="@color/black" />

        <TextView
            style="@style/calendar_day_of_week"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="수"
            android:textColor="@color/black" />

        <TextView
            style="@style/calendar_day_of_week"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="목"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            style="@style/calendar_day_of_week"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="금"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            style="@style/calendar_day_of_week"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="토"
            android:textAlignment="center"
            android:textColor="@color/blue" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calendarDayOfWeekLayout" >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/calendarMonthRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:itemCount="42"
            tools:listitem="@layout/item_calendar" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>