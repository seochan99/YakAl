<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.viewpharm.yakal.main.viewmodel.CalendarViewModel" />

        <variable
            name="todoViewModel"
            type="com.viewpharm.yakal.main.viewmodel.HomeTodoViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".main.activity.CalenderActivity"
        android:background="#FFE9E9EE">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/white"
            android:gravity="start|center_vertical"
            android:minHeight="90dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationContentDescription="뒤로"

            app:navigationIcon="@drawable/ic_custom_back"
            app:title="@string/app_name"
            app:titleTextColor="@color/white">

            <TextView
                android:id="@+id/toolbarTitle"
                style="@style/default_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="다른 날짜 복용정보"
                android:textSize="20sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:id="@+id/calendarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/lyt_home_top"
                android:paddingBottom="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/previousButton"
                        android:layout_width="25dp"
                        android:layout_height="25dp"

                        android:onClick="@{()-> viewModel.previousDate()}"
                        android:background="@drawable/btn_home_bell"
                        android:src="@drawable/ic_custom_previous" />

                    <TextView
                        android:id="@+id/monthTextView"
                        style="@style/default_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="23dp"
                        android:layout_marginEnd="23dp"
                        android:text="@{viewModel.monthString}"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/nextButton"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:onClick="@{()-> viewModel.nextDate()}"
                        android:background="@drawable/btn_home_bell"
                        android:src="@drawable/ic_custom_next" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="일"
                        style="@style/calendar_day_of_week"
                        android:textColor="@color/risk_red" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="월"
                        style="@style/calendar_day_of_week"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="화"
                        style="@style/calendar_day_of_week"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="수"
                        style="@style/calendar_day_of_week"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="목"
                        android:textAlignment="center"
                        style="@style/calendar_day_of_week"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="금"
                        android:textAlignment="center"
                        style="@style/calendar_day_of_week"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="토"
                        android:textAlignment="center"
                        style="@style/calendar_day_of_week"
                        android:textColor="@color/blue" />
                </LinearLayout>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="0dp"
                    app:strokeWidth="0dp"
                    android:animateLayoutChanges="true">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/calendarRecyclerView"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/item_calendar"
                        tools:itemCount="1" />
                </com.google.android.material.card.MaterialCardView>

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_custom_down_arrow"
                    android:background="@drawable/view_oval_next"
                    android:onClick="@{()->viewModel.onClickExpandBottomEvent()}"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center" />

            </LinearLayout>
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:fillViewport="true"
                app:layout_constraintTop_toBottomOf="@id/calendarLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/todayTakingScheduleMainLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="parent">

                        <TextView
                            android:id="@+id/todayDateTextView"
                            style="@style/default_font"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:text="@{todoViewModel.dateText}"
                            android:textSize="15sp"

                            app:layout_constraintBottom_toBottomOf="@+id/todayPercentBar"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/todayPercentBar"
                            app:layout_constraintVertical_bias="0.20" />

                        <TextView
                            android:id="@+id/todayTakingNumberTextView"
                            style="@style/default_font"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@{todoViewModel.takenCntText}"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="@+id/todayDateTextView"
                            app:layout_constraintTop_toBottomOf="@id/todayDateTextView" />

                        <TextView
                            android:id="@+id/todayTakingTextView"
                            style="@style/default_font"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="개 복용"
                            android:textSize="20sp"
                            app:layout_constraintBottom_toBottomOf="@id/todayTakingNumberTextView"
                            app:layout_constraintStart_toEndOf="@+id/todayTakingNumberTextView"
                            app:layout_constraintTop_toTopOf="@id/todayTakingNumberTextView" />

                        <TextView
                            android:id="@+id/todayTotalNumberView"
                            style="@style/default_font"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="@{todoViewModel.totalCntText}"

                            android:textSize="15sp"
                            app:layout_constraintBottom_toBottomOf="@id/todayTakingNumberTextView"
                            app:layout_constraintStart_toEndOf="@+id/todayTakingTextView"
                            app:layout_constraintTop_toTopOf="@id/todayTakingNumberTextView" />

                        <ProgressBar
                            android:id="@+id/todayPercentBar"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginEnd="22dp"
                            android:max="100"

                            android:progressDrawable="@drawable/bar_home_taking_percent"
                            android:progressTint="@color/blue"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/todayPercentTextView"
                            style="@style/default_font"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:text="100%"
                            android:textAlignment="center"
                            android:textColor="#FF5588FD"
                            android:textSize="16dp"

                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@id/todayPercentBar"
                            app:layout_constraintEnd_toEndOf="@id/todayPercentBar"
                            app:layout_constraintStart_toStartOf="@id/todayPercentBar"
                            app:layout_constraintTop_toTopOf="@id/todayPercentBar" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/overLapTextView"
                        style="@style/default_font"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/view_oval_overlap"

                        android:padding="12dp"
                        android:text="약물 중 성분이 같은 중복 약물이 있습니다!"
                        android:textAlignment="center"
                        android:textColor="#E01029"
                        android:textSize="15sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/todayTakingScheduleMainRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        tools:itemCount="3"
                        android:overScrollMode="never"
                        android:nestedScrollingEnabled="true"
                        tools:listitem="@layout/item_pill_parent" />
                </LinearLayout>


            </androidx.core.widget.NestedScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>