<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1" >

    <ProgressBar
        android:layout_marginTop="10dp"
        android:id="@+id/todayPercentBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="32dp"
        android:layout_height="32dp"

        android:max="100"
        android:progressDrawable="@drawable/bar_home_taking_percent"
        android:progressTint="@color/blue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

<!--    <View-->
<!--        android:layout_width="28dp"-->
<!--        android:layout_height="28dp"-->
<!--        android:background="@drawable/view_oval"-->
<!--        app:layout_constraintBottom_toBottomOf="@+id/todayPercentBar"-->
<!--        app:layout_constraintEnd_toEndOf="@+id/todayPercentBar"-->
<!--        app:layout_constraintStart_toStartOf="@id/todayPercentBar"-->
<!--        app:layout_constraintTop_toTopOf="@id/todayPercentBar" />-->

    <TextView
        android:id="@+id/calendarDayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:textColor="@color/black"
        android:textSize="12sp"

        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/todayPercentBar"
        app:layout_constraintEnd_toEndOf="@+id/todayPercentBar"
        app:layout_constraintStart_toStartOf="@+id/todayPercentBar"
        app:layout_constraintTop_toTopOf="@+id/todayPercentBar" />

    <ImageView
        android:id="@+id/overLapImageView"
        android:layout_width="34dp"
        android:layout_height="18dp"
        android:layout_gravity="end"
        android:src="@drawable/ic_custom_overlap"

        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/todayPercentBar"
        app:layout_constraintStart_toStartOf="@id/todayPercentBar"
        app:layout_constraintEnd_toEndOf="@id/todayPercentBar"/>

</androidx.constraintlayout.widget.ConstraintLayout>