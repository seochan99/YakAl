<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.viewpharm.yakal.signup.viewmodel.NicknameViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".signup.fragment.SignUpNicknameFragment"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="약알에서 사용할\n닉네임을 입력해주세요"
                style="@style/default_font"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:lineSpacingExtra="4sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/nicknameEditText"
                style="@style/default_font"
                android:onTextChanged="@{(text, start, before, count) -> viewModel.onTextChanged(text, start, before, count)}"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/et_rounded_corner_rectangle"
                android:text="@={viewModel.nickname.nickname}"

                android:hint="5자 이내로 입력"
                android:textSize="20sp"
                android:maxLength="5"
                android:singleLine="true"
                android:privateImeOptions="defaultInputmode=korean;"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titleTextView" />

            <ImageButton
                android:id="@+id/textClearButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_custom_oval_cancel"
                android:layout_marginEnd="24dp"

                android:onClick="@{() -> viewModel.onClickClear()}"
                android:visibility="@{viewModel.nickname.cancelEnable ? View.VISIBLE : View.INVISIBLE}"
                app:layout_constraintBottom_toBottomOf="@+id/nicknameEditText"
                app:layout_constraintEnd_toEndOf="@+id/nicknameEditText"
                app:layout_constraintTop_toTopOf="@+id/nicknameEditText"
                android:importantForAccessibility="no" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nextButton"
                style="@style/default_font"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="32dp"
                android:text="다음"
                android:textSize="20sp"
                android:textColor="@drawable/btn_sign_up_text_color"
                android:onClick="@{() -> viewModel.onClickNext()}"
                android:enabled="@{viewModel.nickname.nextEnable}"
                android:outlineProvider="none"
                android:background="@drawable/btn_sign_up_next"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>