<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.viewpharm.yakal.main.viewmodel.NotificationSettingViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".main.fragment.NotificationSettingFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/takingSettingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="복얄 알림"
                style="@style/default_font"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/takingDescriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="등록한 약의 복용 알림"
                style="@style/default_font"
                android:textColor="#90909F"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/takingSettingTextView"
                app:layout_constraintStart_toStartOf="@id/takingSettingTextView" />
            
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/takingSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:checked="@{viewModel.isOnTaking}"

                android:thumb="@drawable/switch_thumb"
                app:track="@drawable/switch_track"

                app:layout_constraintTop_toTopOf="@id/takingSettingTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/takingDescriptionTextView" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>