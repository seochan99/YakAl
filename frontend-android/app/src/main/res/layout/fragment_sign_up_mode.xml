<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.SignUpModeFragment"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="모드를 선택해주세요"
            style="@style/default_font"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:lineSpacingExtra="4sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <RadioGroup
            android:id="@+id/modeRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/titleTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <RadioButton
                android:id="@+id/normalModeRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/selector_radio_button"
                android:button="@null"
                android:lineSpacingExtra="2sp"
                android:paddingStart="20dp"
                android:paddingTop="24dp"
                android:paddingEnd="20dp"
                android:paddingBottom="24dp"
                android:text="일반 모드\n\n약알의 일반적인 모드입니다" />

            <RadioButton
                android:id="@+id/lightModeRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:button="@null"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="라이트 모드\n\n시니어를 위한 쉬운 모드입니다.\n다제약물 정보가 포함되어 있습니다."
                android:background="@drawable/selector_radio_button"
                android:lineSpacingExtra="2sp"
                android:layout_marginTop="16dp"/>
        </RadioGroup>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nextButton"
            style="@style/default_font"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="32dp"
            android:text="다음"
            android:textSize="20sp"
            android:textColor="@drawable/btn_sign_up_text_color"
            android:enabled="false"

            android:outlineProvider="none"
            android:background="@drawable/btn_sign_up_next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>