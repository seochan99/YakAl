<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="default_font" parent="" >
        <item name="fontFamily">@font/suit_medium</item>
    </style>

    <style name="calendar_day_of_week" parent="default_font">
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="addPillMainButtonShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>

    <style name="addPillSubTopShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">25%</item>
        <item name="cornerSizeTopRight">25%</item>
        <item name="cornerSizeBottomLeft">0%</item>
        <item name="cornerSizeBottomRight">0%</item>
    </style>

    <style name="addPillSubMiddleShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
    </style>

    <style name="addPillSubBottomShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0%</item>
        <item name="cornerSizeTopRight">0%</item>
        <item name="cornerSizeBottomLeft">25%</item>
        <item name="cornerSizeBottomRight">25%</item>
        <item name="borderWidth">10dp</item>

    </style>

    <style name="addPillButton" parent="default_font">
        <item name="android:padding">0dp</item>
    </style>

    <style name="addPillSubButton" parent="addPillButton">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="iconPadding">5dp</item>
        <item name="android:outlineProvider">none</item>
        <item name="iconTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="Widget.App.ButtonStyle"
        parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/GreenButtonThemeOverlay</item>
    </style>

    <style name="GreenButtonThemeOverlay">
        <item name="android:src">@drawable/bt_home_bell</item>
    </style>
</resources>